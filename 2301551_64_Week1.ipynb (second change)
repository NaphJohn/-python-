      "source": [
        "#while loop\n",
        "import re\n",
        "p= input(\"Input your password: \")\n",
        "while True:\n",
        "    if (len(p) >= 8) and re.search(r\"[\\d]+\", p) and re.search(r\"[A-Z]+\", p):\n",
        "        print(\"It is a valid password.\")\n",
        "        break\n",
        "    elif (len(p) >= 8) and re.search(r\"[\\d]+\", p) and not re.search(r\"[A-Z]+\", p):\n",
        "        print(\"No capital letter.\")\n",
        "        break\n",
        "    elif (len(p) >= 8) and not re.search(r\"[\\d]+\", p) and re.search(r\"[A-Z]+\", p):\n",
        "        print(\"No digit.\")\n",
        "    elif (len(p) >= 8) and not re.search(r\"[\\d]+\", p) and not re.search(r\"[A-Z]+\", p):\n",
        "        print(f\"No digit.\\nNo capital letter.\")\n",
        "        break\n",
        "    elif (len(p) < 8) and re.search(r\"[\\d]+\", p) and re.search(r\"[A-Z]+\", p):\n",
        "        print(f\"No longer than 8 characters.\")\n",
        "        break\n",
        "    elif (len(p) < 8) and not re.search(r\"[\\d]+\", p) and re.search(r\"[A-Z]+\", p):\n",
        "        print(f\"No longer than 8 characters. \\nNo digit.\")\n",
        "        break\n",
        "    elif (len(p) < 8) and re.search(r\"[\\d]+\", p) and not re.search(r\"[A-Z]+\", p):\n",
        "        print(f\"No longer than 8 characters. \\nNo capital letter.\")\n",
        "        break\n",
        "    else:\n",
        "        print(f\"No longer than 8 characters. \\nNo digit.\\nNo capital letter.\")\n",
        "        break"
      ],
