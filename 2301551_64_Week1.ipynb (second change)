      "source": [
        "#while loop\n",
        "nterms = int(input(\"Enter n:\"))\n",
        "n1, n2 = 0, 1\n",
        "count = 0\n",
        "if nterms < 0:\n",
        "   print(\"Please enter a positive integer\")\n",
        "elif nterms == 0:\n",
        "    print(f\"Fib 0 = 0\")\n",
        "elif nterms == 1:\n",
        "    print(f\"Fib 1 = 1\")\n",
        "else:\n",
        "    while count < nterms:\n",
        "       nth = n1 + n2\n",
        "       # update values\n",
        "       n1 = n2\n",
        "       n2 = nth\n",
        "       count += 1\n",
        "    print(f\"Fib {nterms} = {n1}\")"
      ],
      "execution_count": null,
      "outputs": []
